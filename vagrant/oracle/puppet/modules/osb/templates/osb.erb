PATH=$PATH:/bin:/sbin:/usr/sbin:<%= @jvm %>/bin
export JAVA_HOME=<%= @jvm %>
start(){
	sh <%= @domain_directory %>/bin/starttWebLogic.sh
	return 0
}

stop(){
	sh <%= @mdw %>/bin/stopWebLogic.sh
	return 0
}

restart(){
	stop && start
	return 0
}

case "$1" in
start)
    start
    ;;
stop)
    stop
    ;;
restart)
    restart
    ;;
*)
    echo "Usage: $0 {start|stop|restart|status}"
    exit 1
esac

exit
